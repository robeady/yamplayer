{
    "compilerOptions": {
        "outDir": "./dist/node",
        "sourceMap": true,
        "module": "commonjs",
        "target": "ES2019",
        "jsx": "react",
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "useDefineForClassFields": true,
        "noUncheckedIndexedAccess": true,
        // this plugin is brought by the vscode styled components extension.
        // unfortunately it reports spurious syntax errors for valid code.
        "plugins": [{ "name": "typescript-styled-plugin", "validate": false }]
    },
    "include": ["./src/**/*"]
}
